
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f6f7f9;
  position: relative;
}

.header {
  position: relative;
  background: linear-gradient(180deg, #b80f2e 0%, #d82c45 60%, #e95b6a 100%);
  padding: 24rpx 28rpx;
  border-radius: 0 0 24rpx 24rpx;
  min-height: 160rpx;
  max-height: 240rpx;
  overflow: hidden;
}

.banner-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: radial-gradient(circle at 20% 30%, rgba(255,255,255,0.08), transparent 45%),
    radial-gradient(circle at 80% 40%, rgba(255,255,255,0.07), transparent 42%);
  opacity: 0.6;
}

.header-text {
  position: relative;
  z-index: 1;
}

.title {
  display: block;
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  line-height: 1.2;
}

.subtitle {
  display: block;
  color: rgba(255,255,255,0.92);
  font-size: 26rpx;
  margin-top: 8rpx;
}

.search-card {
  position: relative;
  margin: -48rpx 28rpx 8rpx 28rpx;
  z-index: 8;
}

.search-inner {
  display: flex;
  align-items: center;
  gap: 14rpx;
  background: rgba(255,255,255,0.96);
  border-radius: 36rpx;
  padding: 18rpx 22rpx;
  box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.12);
  backdrop-filter: blur(6px);
}

.search-inner input {
  flex: 1;
  border: none;
  font-size: 30rpx;
  color: #222;
}

.search-suggestions {
  position: fixed;
  left: 28rpx;
  right: 28rpx;
  top: 180rpx;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
  box-shadow: 0 14rpx 32rpx rgba(0,0,0,0.18);
  z-index: 99;
  max-height: 560rpx;
  overflow-y: auto;
}

.suggestions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestions-title {
  font-size: 26rpx;
  color: #666;
}

.suggestions-close {
  font-size: 26rpx;
  color: #dc143c;
}

.suggestion-item {
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #f6f6f6;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-name {
  display: block;
  font-size: 30rpx;
  color: #222;
  font-weight: 600;
}

.suggestion-sub {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.map-layer {
  position: relative;
  flex: 1;
  min-height: 0;
  margin: 10rpx 12rpx 0;
  border-radius: 22rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.12);
  height: calc(100vh - 320rpx);
  min-height: 70vh;
}

.map-canvas {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  min-height: 70vh;
}

.map-fab-group {
  position: absolute;
  right: 20rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  z-index: 6;
}

.fab {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.86);
  color: #c3122e;
  font-size: 24rpx;
  box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.18);
  backdrop-filter: blur(12px);
}

.fab-primary {
  background: rgba(231,50,78,0.92);
  color: #fff;
  box-shadow: 0 14rpx 34rpx rgba(231,50,78,0.28);
}

.poi-card {
  position: fixed;
  left: 28rpx;
  right: 28rpx;
  bottom: 220rpx;
  background: #f7f7f7;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 28rpx rgba(0,0,0,0.12);
  z-index: 99;
  transform: translateY(8rpx);
  opacity: 0;
  transition: transform 160ms ease, opacity 160ms ease;
}

.poi-card.slide-in {
  transform: translateY(0);
  opacity: 1;
}

.floating-nav {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  padding: 16rpx 18rpx;
  background: rgba(255,255,255,0.94);
  border-radius: 28rpx;
  box-shadow: 0 14rpx 32rpx rgba(0,0,0,0.16);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  z-index: 6;
  backdrop-filter: blur(10px);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: #2a2a2a;
  font-size: 24rpx;
  transition: transform 120ms ease, color 120ms ease;
}

.nav-item:active {
  transform: scale(0.97);
  color: #b80f2e;
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  border: 2rpx solid rgba(184,15,46,0.9);
  position: relative;
  box-sizing: border-box;
}

.nav-icon::before,
.nav-icon::after {
  content: "";
  position: absolute;
  background: rgba(184,15,46,0.9);
}

.nav-icon.campus::before {
  left: 16rpx;
  right: 16rpx;
  bottom: 14rpx;
  height: 24rpx;
  border: 2rpx solid rgba(184,15,46,0.9);
  border-radius: 8rpx;
  background: transparent;
}

.nav-icon.campus::after {
  left: 26rpx;
  top: 12rpx;
  width: 12rpx;
  height: 10rpx;
  border-left: 2rpx solid rgba(184,15,46,0.9);
  border-top: 2rpx solid rgba(184,15,46,0.9);
  border-right: 2rpx solid rgba(184,15,46,0.9);
}

.nav-icon.route::before {
  left: 20rpx;
  top: 18rpx;
  width: 24rpx;
  height: 4rpx;
  border-radius: 4rpx;
}

.nav-icon.route::after {
  right: 20rpx;
  bottom: 18rpx;
  width: 14rpx;
  height: 14rpx;
  border: 2rpx solid rgba(184,15,46,0.9);
  border-radius: 50%;
  background: transparent;
}

.nav-icon.pin::before {
  left: 26rpx;
  top: 10rpx;
  width: 12rpx;
  height: 18rpx;
  border: 2rpx solid rgba(184,15,46,0.9);
  border-radius: 12rpx 12rpx 10rpx 10rpx;
  background: transparent;
}

.nav-icon.pin::after {
  left: 30rpx;
  top: 16rpx;
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
}