.search-box {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.advanced-input {
  flex: 1;
  font-size: 28rpx;
}

.search-history {
  margin-top: 48rpx;
}

.section-title {
  font-size: 32rpx;
  color: var(--text-dark);
  font-weight: 500;
  margin-bottom: 24rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  background: #f0f0f0;
  color: var(--text-light);
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 24rpx;
}