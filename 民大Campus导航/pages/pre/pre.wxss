.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.topbar {
  height: 160rpx;
  background: linear-gradient(135deg, #dc143c, #a01030);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border-radius: 0 0 16px 16px;
}

.title-name {
  font-size: 36rpx;
  color: white;
  line-height: 1.4;
  text-align: center;
  padding: 0 40rpx;
}

.main-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  overflow-y: auto;
}

.logo {
  width: 60%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.cover {
  width: 90%;
  max-width: 1000rpx;
  border-radius: 30rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.1);
}

.action-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.button-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 30px 0;
}

.enter-btn {
    width: 200px;
    height: 60px;
    background: linear-gradient(145deg, #d32f2f, #b71c1c);
    color: white;
    border: none;
    border-radius: 30px;
    font-size: 24px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.enter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    background: linear-gradient(145deg, #b71c1c, #d32f2f);
}

.enter-btn:active {
    transform: translateY(1px);
}

.logo {
    width: 100%;
    max-width: 300px;
    margin-bottom: 20px;
}

.cover {
    width: 80%;
    max-width: 800px;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}