.header {
  background: linear-gradient(135deg, #dc143c, #a01030);
  padding: 20px;
  border-radius: 0 0 16px 16px;
}

.title {
  display: block;
  color: white;
  font-size: 20px;
  font-weight: 600;
}

.subtitle {
  display: block;
  color: rgba(255,255,255,0.9);
  font-size: 14px;
  margin-top: 4px;
}

.search-bar {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.search-bar input {
  flex: 1;
  border: none;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.button-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  margin-top: 16px;
}

.button-icon {
  background: white;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
}

.button-icon image {
  width: 56px;
  height: 40px;
  margin-bottom: 8px;
}

.button-icon text {
  display: block;
  font-size: 12px;
  color: #333;
}