.detail-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}
.header {
  background: linear-gradient(135deg, #dc143c, #a01030);
  padding: 40rpx 32rpx;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  position: relative;
}

.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.title-badge {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.15));
}

.title-group {
  text-align: center;
}
.main-title {
  font-size: 44rpx;
  color: #fff;
  font-weight: 600;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}
.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 8rpx;
  font-family: Arial, sans-serif;
}

.title-line {
  width: 200rpx;
  height: 4rpx;
  background: rgba(255,255,255,0.3);
  margin: 20rpx auto 0;
  border-radius: 2rpx;
}
.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.info-label {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-light);
}

.info-value {
  font-size: 32rpx;
  color: var(--text-dark);
  font-weight: 500;
}

.nav-button {
  background: var(--primary-color);
  color: white;
  margin-top: 48rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.detail-image {
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.description {
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}