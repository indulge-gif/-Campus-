.entry-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

.bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.52) 0%, rgba(0,0,0,0.32) 40%, rgba(0,0,0,0.65) 100%);
}

.content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 80rpx 48rpx 120rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  box-sizing: border-box;
}

.titles {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  color: #fff;
}

.headline {
  font-size: 44rpx;
  font-weight: 800;
  line-height: 1.3;
}

.subhead {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.88);
}

.cta {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #c3122e, #e94a5a);
  color: #fff;
  border: none;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 16rpx 32rpx rgba(195,18,46,0.32);
}

.cta:active {
  background: linear-gradient(135deg, #a80f28, #c3122e);
}
