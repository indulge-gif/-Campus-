.header {
  background: linear-gradient(135deg, #dc143c, #a01030);
  padding: 24rpx;
  border-radius: 0 0 32rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.school-logo {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
}

.title-group {
  flex: 1;
}

.main-title {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
  line-height: 1.4;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  display: block;
}

.location-list {
  margin-top: 32rpx;
}

.location-item {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.location-name {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-dark);
}

.distance {
  font-size: 24rpx;
  color: var(--text-light);
}
