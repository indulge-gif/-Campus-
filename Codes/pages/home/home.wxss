.header {
  background: linear-gradient(135deg, #dc143c, #a01030);
  padding: 20px;
  border-radius: 0 0 16px 16px;
}

.title {
  display: block;
  color: white;
  font-size: 20px;
  font-weight: 600;
}

.subtitle {
  display: block;
  color: rgba(255,255,255,0.9);
  font-size: 14px;
  margin-top: 4px;
}

.container {
  position: relative;
  padding-bottom: 120rpx;
}

.search-bar {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.search-bar input {
  flex: 1;
  border: none;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-suggestions {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  top: 230rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 28rpx rgba(0,0,0,0.18);
  z-index: 99;
  max-height: 560rpx;
  overflow-y: auto;
}

.suggestions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestions-title {
  font-size: 26rpx;
  color: #666;
}

.suggestions-close {
  font-size: 26rpx;
  color: #dc143c;
}

.suggestion-item {
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #f6f6f6;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-name {
  display: block;
  font-size: 30rpx;
  color: #222;
  font-weight: 600;
}

.suggestion-sub {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.map-wrapper {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
}

.button-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  margin-top: 16px;
}

.button-icon {
  background: white;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
}

.button-icon image {
  width: 56px;
  height: 40px;
  margin-bottom: 8px;
}

.button-icon text {
  display: block;
  font-size: 12px;
  color: #333;
}