.entry {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

.bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.65) 0%, rgba(0,0,0,0.45) 45%, rgba(0,0,0,0.75) 100%);
}

.body {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 80rpx 48rpx 120rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  box-sizing: border-box;
  color: #fff;
}

.texts {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
  text-align: center;
}

.welcome-line {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255,255,255,0.9);
  line-height: 1.35;
}

.school-line {
  font-size: 46rpx;
  font-weight: 800;
  color: #fff;
  line-height: 1.28;
}

.subhead {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.88);
  text-align: center;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
}

.cta {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #c3122e, #e94a5a);
  color: #fff;
  border: none;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 16rpx 32rpx rgba(195,18,46,0.32);
  animation: breathe 3400ms ease-in-out infinite;
}

.cta-active {
  background: linear-gradient(135deg, #a80f28, #c3122e);
}

@keyframes breathe {
  0% { transform: scale(1); box-shadow: 0 16rpx 32rpx rgba(195,18,46,0.32); }
  50% { transform: scale(1.03); box-shadow: 0 18rpx 38rpx rgba(195,18,46,0.38); }
  100% { transform: scale(1); box-shadow: 0 16rpx 32rpx rgba(195,18,46,0.32); }
}

.countdown {
  font-size: 24rpx;
  color: rgba(255,255,255,0.78);
  text-align: center;
  width: 100%;
}